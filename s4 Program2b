#include<iostream>
using namespace std;
inline float lar(float a,float b, float c=50)
{
	return ((a>b&&a>c)?a:b>c?b:c);
}
int main()
{
	float x,y,z;
	cout<<"\n enter three numbers :\n";
	cin>>x>>y>>z;
	cout<<"largest = "<<lar(x,y,z);
	cout<<"\n Enter two numbers :\n";
	cin >>x>>y;
	cout <<"\n Largest using default value = "<<lar(x,y)<<"\n";
	return 0;
	
}
